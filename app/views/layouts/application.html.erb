<!DOCTYPE html>
<html>
<head>
  <title>Meetup</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller] + '-' + params[:action]%>">
  <div class="navbar clearfix">
    <div class="container">
      <a class="navbar-brand" href="/">
        Meetup
      </a>
      <ul class="nav left">
        <li><%= link_to t("navbar.about"), about_path %></li>
        <li><a href="#">placeholder</a></li>
      </ul>
      <ul class="nav right">
        <% if current_user %>
        <li><%= link_to current_user.name, "#" %></li>
        <li><%= link_to "登出", logout_path,method: :delete %></li>
        <% else %>
        <li><%= link_to "登录", login_path %></li>
        <li><%= link_to "注册", signup_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% if flash.notice %>
  <div class="notice"><%= flash.notice %></div>
  <% end %>
  <%= yield %>
  <% render :partial => "layouts/footer" %>
  <script>
    $('.home-banner').anystretch("<%= image_url "home-banner-bg.jpg" %>");
    var hideNotice = function(){
      $(".notice").fadeOut("slow");
    }
    setTimeout(hideNotice, 1000);
  </script>

</body>
</html>
